{{ui-slick slides=model.headerSlides}}

<section>
	<div class="container">
		<div class="row d-flex">
			<div class="col-md-6">
				<h3>Förderverein</h3>
				<p>Lust auf ein außergewöhnliches Hobby?<br>Hier kann sich jeder einbringen, der Spaß daran hat, zu helfen.</p>
				{{#link-to "association" class="btn btn-light"}}
					{{t "general.details"}}
				{{/link-to}}
			</div>
			<div class="col-md-6">
				<h3>Jugendfeuerwehr</h3>
				<p>Wie gehe ich mir Feuer um? Wie geht ein richtiger Notruf?<br>Hier lernt Ihr alles rund um die Feuerwehr.</p>
				{{#link-to "youth" class="btn btn-light"}}
					{{t "general.details"}}
				{{/link-to}}
			</div>
		</div>
		<div class="row d-flex">
			<div class="col-md-6">
				<h3>Einsatzabteilung</h3>
				<p>Wer hilf bei Feuer, Hochwasser und ist da in der Not?<br>Die Kameraden der freiwilligen Feuerwehr.</p>
				{{#link-to "operation" class="btn btn-light"}}
					{{t "general.details"}}
				{{/link-to}}
			</div>
			<div class="col-md-6">
				<h3>Ehrenabteilung</h3>
				<p>Eine Frage des Alters? Nein!<br>Die Alters- und Ehrenabteilung leistet einen wichtigen Beitrag.</p>
				{{#link-to "honor" class="btn btn-light"}}
					{{t "general.details"}}
				{{/link-to}}
			</div>
		</div>
	</div>
</section>

<section class="highlight events">
	<div class="container">
		{{#each model.news as |news|}}
			<div class="row event">
				<div class="col-md-1">
					<p class="date">{{news.day}}</p>
					<p class="month">{{news.month}}</p>
				</div>
				<div class="col-md-11">
					<h2>{{news.title}}</h2>
					<p>{{news.description}}</p>
				</div>
			</div>
		{{/each}}
	</div>
</section>

{{outlet}}
